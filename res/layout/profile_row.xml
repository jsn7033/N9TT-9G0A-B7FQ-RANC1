<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/tab_main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/tab_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="13dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_person" />

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:text="@string/badges_title"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/tabPurpleLine"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignLeft="@+id/tab_container"
            android:layout_alignRight="@+id/tab_container"
            android:layout_below="@+id/tab_container"
            android:background="@color/purple" />

        <View
            android:id="@+id/tabWhiteLine"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignLeft="@+id/tab_container"
            android:layout_alignRight="@+id/tab_container"
            android:layout_below="@+id/tab_container"
            android:background="@color/white" />
    </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tab_main_container"
            android:layout_alignBottom="@+id/tab_main_container"
            android:layout_toRightOf="@+id/tab_main_container"
            android:background="@color/light_gray2" />
</RelativeLayout>