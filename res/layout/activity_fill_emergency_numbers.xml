<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/emergency_bg"
        >
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/emergency_bg" 
        >

<LinearLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:alpha="0.9"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/back"
    android:visibility="visible">
    
     <LinearLayout
    android:id="@+id/layoutf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="5dp"
    android:layout_marginBottom="10dp"
    >

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact No 1:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#503080" />

    <EditText
        android:id="@+id/txtemailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:ems="10"
        
        android:inputType="phone" />
 

</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#503080">
</LinearLayout>
<LinearLayout
    android:id="@+id/layout2"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

<TextView
    android:id="@+id/txtuname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact No 2:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#503080" />

    <EditText
        android:id="@+id/txtage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#555"
        android:inputType="phone" />

</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#503080">
</LinearLayout>
<LinearLayout
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
  >

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact No 3:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#503080" />

    <EditText
        android:id="@+id/txtbloodgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:ems="10"
        android:textColor="#555"
        android:inputType="phone"/>

    
</LinearLayout>
</LinearLayout>

<Button
        android:id="@+id/btnpersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save Changes"
        android:background="@drawable/button_design"
        android:textColor="#fff"
        android:visibility="gone"/>

<Button
        android:id="@+id/btnaddcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#037d46"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:text="Add emergency contacts" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_design"
        android:textColor="#fff"
        android:text="Proceed to next step" />
</RelativeLayout>
</ScrollView>