<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"         
    
    android:clickable="true" 
    android:focusableInTouchMode="true"  
    >
	
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"           
            android:scrollbars="vertical"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <RelativeLayout
                android:id="@+id/rlpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <ImageButton
                    android:id="@+id/imgprofilepic"
                    android:layout_width="156dp"
                    android:layout_height="156dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/no_image"
                    />
                
                </RelativeLayout>
            

            <RelativeLayout
                android:id="@+id/rlusername"
                android:layout_below="@+id/rlpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Username"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <TextView
                    android:id="@+id/txtuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="51dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="Name1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlmobile"
                android:layout_below="@+id/rlusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Mobile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <TextView
                    android:id="@+id/textmob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Mobile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <TextView
                    android:id="@+id/txtmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="78dp"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Mobile1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlfname"
                android:layout_below="@+id/rlmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="First Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtfname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView6"
                    android:ems="10"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rllname"
                android:layout_below="@+id/rlfname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Last Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtlname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView13"
                    android:ems="10"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlemail"
                android:layout_below="@+id/rllname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Email ID"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtemailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textemail"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlgender"
                android:layout_below="@+id/rlemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Gender"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="100dp"
                    android:checkedButton="@+id/radio_male"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/male"
                        android:textColor="#555" />

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/female"
                        android:textColor="#555" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rldob"
                android:layout_below="@+id/rlgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="DOB"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtdob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView14"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlbloodgroup"
                android:layout_below="@+id/rldob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtbloodgp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView9"
                    android:ems="10"
                    android:textColor="#555" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlmarital"
                android:layout_below="@+id/rlbloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <Spinner
                    android:id="@+id/spinnermarital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/textView15" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Marital Status"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlfrname"
                android:layout_below="@+id/rlmarital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Father&apos;s Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/txtfathername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Enter Name" />

                    <EditText
                        android:id="@+id/txtfmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Mobile Number" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlspouse"
                android:layout_below="@+id/rlfrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Spouse Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/txtspousename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Enter Name" />

                    <EditText
                        android:id="@+id/txtsmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Mobile Number" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlemployed"
                android:layout_below="@+id/rlspouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Employed"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="130dp"
                    android:checkedButton="@+id/radio_employedyes"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_employedyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/yes"
                        android:textColor="#555" />

                    <RadioButton
                        android:id="@+id/radio_employedno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/no"
                        android:textColor="#555" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlprofession"
                android:layout_below="@+id/rlemployed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Profession"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />

                <EditText
                    android:id="@+id/txtprofession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView12"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlcompany"
                android:layout_below="@+id/rlprofession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/txtcompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView18"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Company"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlinsurance"
                android:layout_below="@+id/rlcompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/txtinsurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView22"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Medical Insurance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlpolicy"
                android:layout_below="@+id/rlinsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/txtpolicyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView23"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Policy No."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlhealth"
                android:layout_below="@+id/rlpolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/txthealthremark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/texthealth"
                    android:layout_alignParentRight="true"
                    android:ems="10" />

                <TextView
                    android:id="@+id/texthealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Health Remark"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlvehicle"
                android:layout_below="@+id/rlhealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/txtvehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblvehicle"
                    android:layout_alignParentRight="true"
                    android:ems="10" />

                <TextView
                    android:id="@+id/lblvehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Vehicle No."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#503080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlresident"
                android:layout_below="@+id/rlvehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Residential Details:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#503080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <EditText
                        android:id="@+id/txtraddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textPostalAddress" />

                    <EditText
                        android:id="@+id/txtrcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="City" />

                    <EditText
                        android:id="@+id/txtrstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="State" />

                    <EditText
                        android:id="@+id/txtrpincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Pincode" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlofficial"
                android:layout_below="@+id/rlresident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Official Details:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#503080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="10dp" >

                  
                    <EditText
                        android:id="@+id/txtoaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:hint="Address" />

                    <EditText
                        android:id="@+id/txtocity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtoaddress"
                        android:layout_below="@+id/txtoaddress"
                        android:ems="10"
                        android:hint="City" />

                    <EditText
                        android:id="@+id/txtostate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtocity"
                        android:layout_below="@+id/txtocity"
                        android:ems="10"
                        android:hint="State" />

                    <EditText
                        android:id="@+id/txtopincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtostate"
                        android:layout_alignParentBottom="true"
                        android:ems="10"
                        android:hint="Pincode" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlsubmit"
                android:layout_below="@+id/rlofficial"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_design"
                    android:textColor="#fff"
                    android:text="Update" />
                
            </RelativeLayout>
            
        </RelativeLayout>
        

</ScrollView>