<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@drawable/profile_bg">  

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:alpha="0.9"
    android:background="#fff" >

<RelativeLayout 
    android:id="@+id/layoutname"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#503080"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtuname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       android:layout_toRightOf="@+id/textView2"
         android:textColor="#555"/>

</RelativeLayout>


<RelativeLayout
    android:id="@+id/layoutmob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
   android:padding="15dp"
    android:layout_below="@+id/layoutname">
    
    <TextView
        android:id="@+id/textmob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#503080"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginLeft="36dp"
        android:textColor="#555"
        android:layout_toRightOf="@+id/textmob"
        android:text="Mobile1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutgender"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="15dp"
    android:layout_below="@+id/layoutemail"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#503080"
        android:textSize="22sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" 
        android:layout_toRightOf="@+id/textView7"
        android:checkedButton="@+id/radio_male"
        >

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/male"
            android:textColor="#555"
             />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      	    android:onClick="onRadioButtonClicked"
      	    android:textColor="#555"
            android:text="@string/female" />

    </RadioGroup>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutgender"
    android:padding="15dp"
     >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#503080"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/textView8"
      android:textColor="#555"
        android:inputType="number"
        android:ems="10" 
        />

    </RelativeLayout>
          
    <RelativeLayout
        android:id="@+id/layoutbutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutage"
    android:layout_alignParentBottom="true"
    android:padding="15dp"
     >
        <Button
                android:id="@+id/btnupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:layout_alignParentBottom="true"
                android:text="Next step"
                android:textColor="#fff"
                android:textSize="21dp" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layoutmob"
        android:padding="10dp" >

        <EditText
            android:id="@+id/txtemailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textemail"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#555" />

        <TextView
            android:id="@+id/textemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Email ID:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#503080"
            android:textSize="22sp" />

    </RelativeLayout>

        </RelativeLayout>
       

            
      
    </ScrollView>

