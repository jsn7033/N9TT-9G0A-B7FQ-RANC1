<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarlayout"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/emergency_bg"
        android:fillViewport="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/emergency_bg">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:alpha="0.9"
                android:background="@drawable/back"

                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layoutf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No 1:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#503080" />

                    <EditText
                        android:id="@+id/txtemailid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"

                        android:textColor="#555" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#503080"></LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txtuname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No 2:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#503080" />

                    <EditText
                        android:id="@+id/txtage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:textColor="#555" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#503080"/>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No 3:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#503080" />

                    <EditText
                        android:id="@+id/txtbloodgp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:ems="10"
                        android:inputType="phone"
                        android:textColor="#555" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#503080"/>


                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_design"
                    android:text="Proceed to next step"
                    android:textColor="#fff" />

            </LinearLayout>

            <Button
                android:id="@+id/btnaddcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#037d46"
                android:text="Add emergency contacts"
                android:textColor="#fff"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/layout1"
                android:layout_alignRight="@+id/layout1"
                android:layout_below="@+id/layout1"

                android:layout_marginTop="35dp"
                android:background="@drawable/button_design"
                android:text="Skip"
                android:textColor="#fff" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>

