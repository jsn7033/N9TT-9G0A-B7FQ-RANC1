<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/broadcastContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ListView
            android:id="@+id/lvPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_alignParentTop="true"
            android:choiceMode="singleChoice" />

        <Button android:id="@+id/btnnewbroadcast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/lvPost"
            android:layout_alignRight="@+id/lvPost"
            android:background="@drawable/newbroadcast"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/purple"
            android:clickable="true">

            <ImageView
                android:id="@+id/ivcircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_businessman"
                android:visibility="gone"/>
            
            <TextView android:id="@+id/tvSlidetoCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Slide to call"
                android:textColor="@color/white"
                android:textSize="18sp" />

            
                <ImageView
                android:id="@+id/ivShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_network" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>