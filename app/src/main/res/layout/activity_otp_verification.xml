<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
   >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/otp_lock"
    tools:context=".OTP_verification" >
<LinearLayout   
    android:id="@+id/layoutotp1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:alpha="0.8"
    android:padding="10dp">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/otp1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="An 6-digit OTP has been sent to your mobile number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#555"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtemailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:textColor="#999"
        android:hint="Enter your OTP"
        android:inputType="text" />
        
    
</LinearLayout>

     <RelativeLayout 
        android:id="@+id/buttonotp"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutotp1"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:background="#f2fbe8"
    >
<Button
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:text="Verify number"
        android:textSize="15sp" 
        android:padding="5dp"
        android:textColor="#fff"
        android:background="@drawable/button_design"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:text="Proceed to next step"
        android:textSize="15sp"
        android:textColor="#fff"
        android:background="@drawable/button_design"
        android:visibility="invisible"  />

    
</RelativeLayout>

    <LinearLayout
        
         android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/back"
        android:alpha="0.8">

<TextView
        android:id="@+id/textView2"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:text="Note:"
        android:textColor="#555"
        
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
<TextView
        android:id="@+id/txtuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  
        android:text="It may take few seconds to recieve the One Time Password(OTP)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#555"
        android:textSize="16dp" />
</LinearLayout>
</RelativeLayout>
</ScrollView>