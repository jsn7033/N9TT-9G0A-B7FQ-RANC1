                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="HEALTH REMARK">

                    <EditText
                        android:id="@+id/ethealth"
                        android:layout_width="match_parent"
